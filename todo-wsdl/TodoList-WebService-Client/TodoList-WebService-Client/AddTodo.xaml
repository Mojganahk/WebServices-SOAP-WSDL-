<Window x:Class="TodoList_WebService_Client.AddTodo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoList_WebService_Client"
        mc:Ignorable="d"
        Title="AddTodo" Height="300" Width="300">
    <Grid>
        <Label Content="task" HorizontalAlignment="Left" Margin="47,36,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.937,-2.366"/>
        <Label Content="due date " HorizontalAlignment="Left" Margin="40,80,0,0" VerticalAlignment="Top" Width="63"/>
        <Label Content="is done" HorizontalAlignment="Left" Margin="47,132,0,0" VerticalAlignment="Top"/>
        <RadioButton Name="rbPending" Content="pending" HorizontalAlignment="Left" Height="16" Margin="103,142,0,0" VerticalAlignment="Top" Width="79" Checked="RadioButton_Checked"/>
        <RadioButton Name="rbDone" Content="done" HorizontalAlignment="Left" Margin="182,143,0,0" VerticalAlignment="Top"/>
        <TextBox Name="tfTask" HorizontalAlignment="Left" Height="23" Margin="108,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="tfDueDate" HorizontalAlignment="Left" Height="23" Margin="108,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
